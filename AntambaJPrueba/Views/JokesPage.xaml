<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AntambaJPrueba.Views.JokesPage"
             Title="Chistes">

    <Grid BackgroundColor="LightYellow" Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Frame Grid.Row="0"
               BackgroundColor="Orange"
               CornerRadius="20"
               Padding="25"
               HasShadow="True"
               BorderColor="Orange"
               VerticalOptions="Center">
            <Label x:Name="JokeLabel"
                   Text="Generando chiste..."
                   FontSize="20"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   TextColor="Black" />
        </Frame>
        
        <Button Grid.Row="1"
                x:Name="GenerarChiste"
                Text=" Otro chiste"
                FontAttributes="Bold"
                BackgroundColor="Orange"
                TextColor="White"
                HeightRequest="50"
                CornerRadius="15"
                Margin="0,30,0,0"
                Clicked="GenerarChiste_Clicked" />
    </Grid>

</ContentPage>
